{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "./",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@commands/*": ["cypress/support/commands/*"],
      "@fixtures/*": ["cypress/fixture/*"]
    },
    "types": ["cypress-real-events", "node", "cypress"],
  },
  "include": ["cypress/**/*.ts", "src/**/*"]
}
